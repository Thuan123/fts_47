<% provide :title, t("category.title") %>
<h1><%= t "category.title" %></h1>
<div id="wrapper">
  <div class="content container">
    <div class="row exam">
      <div class="col-md-10 col-md-offset-1">
        <div>
          <%= link_to t("category.create"), new_admin_category_path , class: "btn btn-success button" %>
        </div>
        <br>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="name"><%= t "category.name" %></th>
              <th class="created_date"><%= t "category.created_at" %></th>
              <th class="action"><%= t "category.action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
        <%= paginate @categories %>
        <div class="col-lg-3">
          <%= t "dowload" %>
          <%= link_to t("csv"), admin_categories_path(format: "csv") %>
          <%= form_tag admin_imports_path, multipart: true do %>
            <%= file_field_tag :file %>
            <%= submit_tag t("import"), class: "btn btn-primary btn-sm"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
