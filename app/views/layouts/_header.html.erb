<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if !current_user.nil? && current_user.admin? %>
      <%= link_to t("static_pages.test_system"), admin_root_path, id: "logo" %>
    <% else %>
      <%= link_to t("static_pages.test_system"), root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if !current_user.nil? && current_user.admin? %>
          <li><%= link_to t("header.home"), admin_root_path %></li>
        <% else %>
          <li><%= link_to t("header.home"), root_path %></li>
        <% end %>
        <li><%= link_to t("header.help"), help_path %></li>
        <% if !user_signed_in? %>
          <li><%= link_to t("header.login"), new_user_session_path %></li>
        <% else %>
          <li><%= link_to t("header_users_link"), admin_users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "user_account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("user_editprofile"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("user_logout"), destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
