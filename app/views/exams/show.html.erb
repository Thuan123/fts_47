<% provide :title, t("exam.test") %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="text-center">
      <h1><%= @exam.category.name %></h1>
    </div>
    <div class="list-question">
      <%= form_for @exam do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :status, value: :uncheck %>
        <%= f.fields_for :results do |builder| %>
          <%= render "question", f: builder %>
        <% end %>
        <%= f.submit t("exam.finish"), class: "btn btn-primary" if @exam.start? || @exam.testing? %>
      <% end %>
    </div>
  </div>
</div>
